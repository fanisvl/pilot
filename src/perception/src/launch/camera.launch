<launch>
    <node pkg="video_stream_opencv" type="video_stream" name="video_stream_node" output="screen" respawn="true">
        <param name="video_stream_provider" value="/dev/video0" />
        <param name="camera_name" value="camera" />
        <param name="frame_id" value="camera_frame" />
        <param name="set_camera_fps" value="60"/>
        <param name="fps" value="60" />
        <param name="width" value="1280" />
        <param name="height" value="720" />
        <param name="pixel_format" value="yuyv" />
        <param name="buffer_queue_size" value="1" />
        <param name="output_encoding" value="bgr8" />
        <param name="flip_horizontal" value="false" />
        <param name="flip_vertical" value="false" />
    </node>
</launch>
